{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "[csharp]": {
    "editor.tabSize": 4,
    "files.eol": "\r\n",
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "files.insertFinalNewline": true
  },
  "[typescript]": {
    "files.eol": "\n",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "files.eol": "\n",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["esbenp", "dotnettools"],
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#8a2ca2",
    "activityBar.background": "#8a2ca2",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#af9530",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#8a2ca2",
    "statusBar.background": "#68217a",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#8a2ca2",
    "statusBarItem.remoteBackground": "#68217a",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#68217a",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#68217a99",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#68217A",
  "prettier.useEditorConfig": false,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.tabs": false,
  "prettier.singleQuote": true,
  "prettier.semicolon": true,
  "prettier.quoteProps": "preserve",
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "all"
}
